---
import { getCollection } from "astro:content";
import SectionHead from "../../components/layout/SectionHead.astro";
import PillBar from "../../components/blogs/PillBar.astro";
import Layout from "../../layouts/Layout.astro";

const allBlogs = await getCollection("blog", ({ data }) => !data.isDraft);
const allTags = [...new Set(allBlogs.map((blog) => blog.data.tags).flat())];

const title = "All tags";
const description = "Find the right blogs through the tags";
---

<Layout title={title} description={description}>
  <SectionHead title={title} description={description} />
  <PillBar tags={allTags} />
</Layout>
