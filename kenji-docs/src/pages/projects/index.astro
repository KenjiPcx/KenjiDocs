---
import { Picture } from "@astrojs/image/components";
import Layout from "../../layouts/Layout.astro";
import SectionHead from "../../components/layout/SectionHead.astro";
import comingSoon from "../../../public/assets/coming-soon.gif";

const title = "Projects";
const description = "View Kenji's projects";
---

<Layout title={title} description={description}>
  <SectionHead title="Projects" description="Will be added in the future" />

  <Picture
    src={comingSoon}
    widths={[200, 400]}
    sizes="(max-width: 400px) 100vw, 400px"
    formats={["webp", "avif", "jpeg"]}
    alt="Coming soon gif"
  />
</Layout>
