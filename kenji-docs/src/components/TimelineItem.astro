---
interface Props {
  title: string;
  subtitle: string;
  last?: boolean;
}

const { title, subtitle, last } = Astro.props;
---

<div class="flex">
  <div>
    <span class="w-3 h-3 bg-indigo-600 block rounded-full mt-2"></span>
    <span
      class={` bg-indigo-600 block h-full w-[2px] translate-x-[5px] ${
        last ? "hidden" : ""
      }`}></span>
  </div>
  <div class="bd-grid px-5">
    <h3 class="font-semibold mb-1">{title}</h3>
    <span class="font-light text-sm">{subtitle}</span>
    <div class="prose dark:prose-invert">
      <ul>
        <slot />
      </ul>
    </div>
  </div>
</div>
