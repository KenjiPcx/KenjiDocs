---
import type { CollectionEntry } from "astro:content";
import BlogCard from "./BlogCard.astro";

interface Props {
  blogs: CollectionEntry<"blog">[];
  class?: string;
  cardsClass?: string;
}

const { blogs, class: className, cardsClass }: Props = Astro.props;
---

<ul class:list={["grid mx-auto", className]}>
  {
    blogs.map((blog, index) => {
      return <BlogCard blog={blog} lazyLoad={index !== 0} class={cardsClass} />;
    })
  }
</ul>
