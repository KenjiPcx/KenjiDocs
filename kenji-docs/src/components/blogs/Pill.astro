---
const colors = [
  "text-green-400",
  "text-emerald-400",
  "text-teal-400",
  "text-sky-400",
  "text-blue-400",
  "text-indigo-400",
  "text-violet-400",
];

interface Props {
  tag: string;
  class?: string;
}
const { tag, class: className = "" } = Astro.props;

const color = colors[Math.floor(Math.random() * colors.length)];
---

<a
  class={`px-4 py-1 rounded-3xl outline ${color} font-bold hover:scale-[1.025] ease-in-out duration-300 ${className}`}
  href={`/tags/${tag}`}
>
  {tag}
</a>
