---
import type { CollectionEntry } from "astro:content";
import { Picture } from "@astrojs/image/components";
import { formatDate } from "../../utils/helpers";

interface Props {
  blog: CollectionEntry<"blog">;
  lazyLoad: boolean;
}

const { blog, lazyLoad }: Props = Astro.props;
const { title, author, excerpt, image, category, publishDate } = blog.data;
const slug = blog.slug;
---

<li>
  <div
    class="grid md:grid-cols-2 gap-4 md:gap-x-10 md:gap-y-8 p-2 items-center rounded-md"
  >
    <div class="overflow-hidden rounded-xl">
      <a href={`/blogs/${slug}`}>
        <Picture
          src={image.src}
          alt={image.alt}
          widths={[200, 400, 800]}
          sizes="(max-width: 800px) 100vw, 800px"
          aspectRatio="16:9"
          loading={lazyLoad ? "lazy" : "eager"}
          class="w-full aspect-video hover:scale-[1.025] ease-out duration-150"
          background={"gray"}
        />
      </a>
    </div>
    <div class="p-3">
      <span class="text-blue-400 uppercase tracking-wider text-sm font-medium">
        {category}
      </span>
      <a href={`/blogs/${slug}`} class="hover:underline">
        <h2 class="text-3xl font-semibold leading-snug tracking-tight mt-1">
          {title}
        </h2>
      </a>
      <p>{excerpt}</p>
      <div class="flex gap-2 mt-3 text-gray-400">
        <span>{author}</span>
        <span>â€¢</span>
        <time datetime={publishDate.toDateString()}>
          {formatDate(publishDate)}
        </time>
      </div>
    </div>
  </div>
</li>
