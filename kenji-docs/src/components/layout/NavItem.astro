---
interface Props {
  path: string;
  name: string;
}
const { path, name } = Astro.props;
---

<a
  href={path}
  class="w-full nav-item hidden first:mt-4 mt-2 text-lg text-slate-700 dark:text-slate-300 md:block md:mt-0 md:first:mt-0 md:last:mr-0 md:mx-2 md:text-lg hover:text-slate-900"
  >{name}</a
>
